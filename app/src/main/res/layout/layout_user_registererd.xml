<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="com.shamlou.agewidget.ui.ViewModelMain" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:background="@color/background_colors"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/text_view_not_registered_welcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="welcome to age widget"
            android:textColor="@color/steel_500"
            android:textSize="32dp"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="80dp"
            />
        <TextView
            android:id="@+id/text_view_not_registered_desc"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_width="0dp"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:text="@string/not_registered_desc"
            android:textColor="@color/steel_500"
            android:textSize="18dp"
            app:layout_constraintTop_toBottomOf="@+id/text_view_not_registered_welcome"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="40dp"
            />

        <CalendarView
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/text_view_not_registered_desc"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/calendar_view"
            android:weekNumberColor="@color/steel_500"
            android:outlineSpotShadowColor="@color/steel_500"
            android:outlineAmbientShadowColor="@color/steel_500"
            android:focusedMonthDateColor="@color/steel_500"
            android:unfocusedMonthDateColor="@color/steel_500"
            android:selectedWeekBackgroundColor="@color/steel_500"
            android:weekSeparatorLineColor="@color/steel_500"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>